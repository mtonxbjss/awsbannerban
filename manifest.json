{
  "manifest_version": 2,
  "name": "AWS Blue Banner Nuke",
  "version": "1.1",
  "description": "Hides all blue banners on AWS Console pages",

  "icons": {
    "48": "icons/awsbannernuke-48.png"
  },
  
  "permissions": ["activeTab", "tabs"],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.console.aws.amazon.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "browser_action": {
    "default_icon": "icons/awsbannernuke-32.png",
    "default_title": "AWS Banner Nuke"
  }
}
